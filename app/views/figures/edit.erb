<h2>Edit a Figure</h2>
<form method="POST" action="/figures/<%= @figure.id %>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label for="figure_name">Figure Name: </label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
  <br><br>
  <h4>Select a Landmark:</h4>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name %></input>
  <% end %>
  <br><br>
  <label for="new_landmark">New Landmark Name: </label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <br><br>
  <h4>Select a Title:</h4>
  <% Title.all.each do |title| %>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%=title.name %></input>
  <% end %>
  <br><br>
  <label for="new_title">New Title: </label>
  <input type="text" id="new_title" name="title[name]">
  <br><br>
  <input type="submit" id="Edit Figure">
</form>